{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "ES2018",
      "DOM"
    ],
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "spec/**/*.ts"],
  "exclude": ["node_modules", "dist", "spec"]
}
